@model Billet_Web.Models.VM.BilletUserCreateVM
<form asp-action="CreateBilletUser">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary ">Create Billet</h1>
        <hr />
         <div class="row">
             <div asp-validation-summary="All" class="text-danger"></div>
             <div class="col-2">
                 <label asp-for="BilletUser.BilletNo" class="control-label pt-2" style="font-size:20px;"></label>
             </div>
             <div class="col-10 pb-3">
                <input asp-for="BilletUser.BilletNo" class="form-control" />
                <span asp-validation-for="BilletUser.BilletNo" class="text-danger"></span>
             </div>
            <div class="col-2">
                <label asp-for="BilletUser.User" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="BilletUser.User" class="form-control" />
                <span asp-validation-for="BilletUser.User" class="text-danger"></span>
            </div>
              <div class="col-2">

                 <label asp-for="BilletUser.BilletId" class="control-label pt-2" style="font-size:20px;"></label>
             </div>
            <div class="col-10 pb-3">
                <select asp-for="BilletUser.BilletId" class="form-select" asp-items="@Model.BilletList">
                    <option disabled selected>--Select Billet--</option>
                </select>
                 <span asp-validation-for="BilletUser.BilletId" class="text-danger"></span>
             </div>
            <div class="col-2">
                <label asp-for="BilletUser.UserAnswer" class="control-label pt-2" style="font-size:20px;"></label>

            </div>
            <div class="col-10 pb-3">
                <input asp-for="BilletUser.UserAnswer" class="form-control" />
                <span asp-validation-for="BilletUser.UserAnswer" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="BilletUser.CorrectAnswer" class="control-label pt-2" style="font-size:20px;"></label>

            </div>
            <div class="col-10 pb-3">
                <input asp-for="BilletUser.CorrectAnswer" class="form-control" />
                <span asp-validation-for="BilletUser.CorrectAnswer" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2 mb-4">
                <a asp-action="IndexBillet" asp-controller="Billet" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5 mb-4">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
         </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}